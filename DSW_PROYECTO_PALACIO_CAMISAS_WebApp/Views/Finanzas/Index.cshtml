@{
    ViewData["Title"] = "Finanzas";
}

<h2>Finanzas</h2>

<form asp-controller="Finanzas" asp-action="Index" method="get" class="mb-4 d-flex gap-3 align-items-end">
    <div class="form-group">
        <label for="Anio">Año</label>
        <input type="number" id="Anio" name="anio" class="form-control" 
               value="@ViewBag.Anio" required style="width:150px;" />
    </div>
    <div class="form-group">
        <label for="Mes">Mes</label>
        <select id="Mes" name="mes" class="form-select" asp-items="ViewBag.meses"></select>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-danger">Calcular</button>
    </div>
</form>

@if (Model != null)
{
    <table class="table table-bordered text-center" style="width:50%; background-color:white;">
        <tr class="table-primary">
            <th colspan="2">Finanzas</th>
        </tr>
        <tr>
            <td class="table-primary">Ingresos Mensuales</td>
            <td style="background-color: #fff8c6;"><strong>@Model.IngresoMensual.ToString("C")</strong></td>
        </tr>
        <tr>
            <td class="table-primary">Ingresos Anuales</td>
            <td style="background-color: #fff8c6;"><strong>@Model.IngresoAnual.ToString("C")</strong></td>
        </tr>
        <tr>
            <td class="table-primary">Egresos Mensuales</td>
            <td style="background-color: #fff8c6;"><strong>@Model.EgresoMensual.ToString("C")</strong></td>
        </tr>
        <tr>
            <td class="table-primary">Egresos Anuales</td>
            <td style="background-color: #fff8c6;"><strong>@Model.EgresoAnual.ToString("C")</strong></td>
        </tr>
    </table>
}

<hr />
