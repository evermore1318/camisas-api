@model DSW_PROYECTO_PALACIO_CAMISAS_WebApp.Models.Pedido
@{
    ViewData["Title"] = "Detalles del Pedido";
    ViewData["Subtitle"] = "Información completa del pedido";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="content-wrapper">
    <!-- Header simple -->
    <div class="page-header">
        <h3>Detalles del Pedido</h3>
        <a href="@Url.Action("Index", "Pedidos")" class="btn-back">
            <i class="fas fa-arrow-left"></i>
            Volver
        </a>
    </div>

    <!-- Contenedor principal -->
    <div class="details-container">
        <!-- Información básica del pedido -->
        <div class="pedido-info-card">
            <div class="pedido-header">
                <div class="pedido-icon">
                    <i class="fas fa-shopping-cart"></i>
                </div>
                <div class="pedido-title">
                    <h4>Pedido #@Model.IdPedido.ToString().PadLeft(4, '0')</h4>
                    <span class="pedido-description">@Model.Descripcion</span>
                </div>
                <div class="pedido-status">
                    @{
                        string estadoClass = "";
                        string estadoIcon = "";
                        switch (Model.Estado?.ToLower())
                        {
                            case "pendiente":
                                estadoClass = "badge-pending";
                                estadoIcon = "fas fa-clock";
                                break;
                            case "pagado":
                                estadoClass = "badge-paid";
                                estadoIcon = "fas fa-check-circle";
                                break;
                            case "cancelado":
                                estadoClass = "badge-cancelled";
                                estadoIcon = "fas fa-times-circle";
                                break;
                            default:
                                estadoClass = "badge-default";
                                estadoIcon = "fas fa-question-circle";
                                break;
                        }
                    }
                    <span class="badge @estadoClass">
                        <i class="@estadoIcon"></i> @Model.Estado
                    </span>
                </div>
            </div>

            <div class="info-grid">
                <div class="info-section">
                    <h5><i class="fas fa-building"></i> Información del Proveedor</h5>
                    <div class="proveedor-info">
                        <div class="proveedor-avatar">@Model.Proveedor.Nombre.Substring(0, 1).ToUpper()</div>
                        <span class="proveedor-name">@Model.Proveedor.Nombre</span>
                    </div>
                </div>

                <div class="info-section">
                    <h5><i class="fas fa-calendar"></i> Fecha del Pedido</h5>
                    <div class="fecha-info">
                        <span class="fecha-text">@Model.Fecha.ToString("dddd, dd 'de' MMMM 'de' yyyy")</span>
                        <span class="fecha-small">@Model.Fecha.ToString("dd/MM/yyyy")</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Información financiera -->
        <div class="financial-info-card">
            <div class="financial-header">
                <h5><i class="fas fa-dollar-sign"></i> Información Financiera</h5>
            </div>

            <div class="financial-grid">
                <div class="financial-item">
                    <div class="financial-label">Monto Total</div>
                    <div class="financial-value total-amount">S/. @Model.Monto.ToString("N2")</div>
                </div>

                <div class="financial-item">
                    <div class="financial-label">Pagos Realizados</div>
                    <div class="financial-value payments-count">@Model.CantidadPagos pagos</div>
                </div>

                <div class="financial-item">
                    <div class="financial-label">Monto Pagado</div>
                    <div class="financial-value paid-amount">S/. @Model.MontoTotalPagos.ToString("N2")</div>
                </div>

                <div class="financial-item">
                    <div class="financial-label">Deuda Pendiente</div>
                    <div class="financial-value pending-debt">S/. @Model.DeudaPendiente.ToString("N2")</div>
                </div>
            </div>

            <!-- Barra de progreso de pagos -->
            <div class="progress-section">
                <div class="progress-label">Progreso de Pago</div>
                @{
                    double porcentajePagado = Model.Monto > 0 ? (double)(Model.MontoTotalPagos / Model.Monto) * 100 : 0;
                    string progressColor = porcentajePagado >= 100 ? "#28a745" : porcentajePagado >= 50 ? "#ffc107" : "#dc3545";
                }
                <div class="progress-bar">
                    <div class="progress-fill" style="width: @porcentajePagado.ToString("F1")%; background-color: @progressColor;"></div>
                </div>
                <div class="progress-text">@porcentajePagado.ToString("F1")% pagado</div>
            </div>
        </div>

        <!-- Acciones -->
        <div class="actions-container">
            <a href="@Url.Action("Edit", new { id = Model.IdPedido })" class="btn-action btn-edit">
                <i class="fas fa-edit"></i>
                Editar Pedido
            </a>
            <a href="@Url.Action("RegistrarPago", "Pagos", new { idPedido = Model.IdPedido })" class="btn-action btn-payment">
                <i class="fas fa-credit-card"></i>
                Registrar Pago
            </a>
            <a href="@Url.Action("Index")" class="btn-action btn-back-list">
                <i class="fas fa-list"></i>
                Volver al Listado
            </a>
        </div>
    </div>
</div>

