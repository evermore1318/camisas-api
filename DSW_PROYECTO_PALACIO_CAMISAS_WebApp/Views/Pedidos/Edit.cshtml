@model DSW_PROYECTO_PALACIO_CAMISAS_WebApp.Models.Pedido
@{
    ViewData["Title"] = "Editar Pedido";
    ViewData["Subtitle"] = "Actualización de información del pedido";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="content-wrapper">
    <!-- Header simple -->
    <div class="page-header">
        <h3>Editar Pedido</h3>
        <a href="@Url.Action("Index", "Pedidos")" class="btn-back">
            <i class="fas fa-arrow-left"></i>
            Volver
        </a>
    </div>

    <!-- Formulario -->
    <div class="form-container">
        <div class="form-card">
            <div class="form-header">
                <i class="fas fa-edit"></i>
                <h4>Actualizar Pedido #@Model.IdPedido.ToString().PadLeft(4, '0')</h4>
            </div>

            <form asp-action="Edit" class="pedido-form">
                <div asp-validation-summary="ModelOnly" class="validation-summary"></div>

                <div class="form-row">
                    <div class="form-group">
                        <label asp-for="IdPedido" class="form-label">
                            <i class="fas fa-hashtag"></i>
                            ID del Pedido
                        </label>
                        <input asp-for="IdPedido" class="form-control" readonly />
                        <span asp-validation-for="IdPedido" class="field-validation-error"></span>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label asp-for="Descripcion" class="form-label">
                            <i class="fas fa-align-left"></i>
                            Descripción
                        </label>
                        <input asp-for="Descripcion" class="form-control" placeholder="Descripción del pedido" />
                        <span asp-validation-for="Descripcion" class="field-validation-error"></span>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label asp-for="IdProveedor" class="form-label">
                            <i class="fas fa-building"></i>
                            Proveedor
                        </label>
                        <select asp-for="IdProveedor" class="form-control" asp-items="ViewBag.Proveedores">
                            <option value="">Seleccionar proveedor</option>
                        </select>
                        <span asp-validation-for="IdProveedor" class="field-validation-error"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Fecha" class="form-label">
                            <i class="fas fa-calendar"></i>
                            Fecha
                        </label>
                        <input asp-for="Fecha" type="date" class="form-control" />
                        <span asp-validation-for="Fecha" class="field-validation-error"></span>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label asp-for="Monto" class="form-label">
                            <i class="fas fa-dollar-sign"></i>
                            Monto (S/.)
                        </label>
                        <input asp-for="Monto" type="number" step="0.01" min="0" class="form-control" placeholder="0.00" />
                        <span asp-validation-for="Monto" class="field-validation-error"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Estado" class="form-label">
                            <i class="fas fa-flag"></i>
                            Estado
                        </label>
                        <select asp-for="Estado" class="form-control">
                            <option value="Pendiente">Pendiente</option>
                            <option value="Pagado">Pagado</option>
                            <option value="Cancelado">Cancelado</option>
                        </select>
                        <span asp-validation-for="Estado" class="field-validation-error"></span>
                    </div>
                </div>

                <div class="form-actions">
                    <button type="submit" class="btn-submit">
                        <i class="fas fa-save"></i>
                        Actualizar Pedido
                    </button>
                    <a href="@Url.Action("Index")" class="btn-cancel">
                        <i class="fas fa-times"></i>
                        Cancelar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

