        font-weight: 500;
    }

    .badge-pending {
        background: #fff3cd;
        color: #856404;
    }

    .badge-paid {
        background: #d4edda;
        color: #155724;
    }

    .badge-cancelled {
        background: #f8d7da;
        color: #721c24;
    }

    .badge-default {
        background: #e2e3e5;
        color: #6c757d;
    }

