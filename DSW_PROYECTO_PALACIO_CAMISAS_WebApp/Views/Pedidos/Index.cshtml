    }

    .pagination-item {
        margin: 0;
    }

    .pagination-link {
        display: block;
        padding: 8px 12px;
        color: #667eea;
        text-decoration: none;
        border: 1px solid #dee2e6;
        border-radius: 4px;
        transition: all 0.3s ease;
        font-weight: 500;
    }

        .pagination-link:hover {
            background: #e9ecef;
            border-color: #adb5bd;
            text-decoration: none;
            color: #495057;
        }

    .pagination-item.active .pagination-link {
        background: #667eea;
        border-color: #667eea;
        color: white;
    }

        .pagination-item.active .pagination-link:hover {
            background: #5a6fd8;
            border-color: #5a6fd8;
            color: white;
        }

    /* Responsive grid adjustments */
    .filters-grid {
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    }

    .filter-actions {
        justify-self: start;
    }
</style>