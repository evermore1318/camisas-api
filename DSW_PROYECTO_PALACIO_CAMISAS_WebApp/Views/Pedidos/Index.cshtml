        font-size: 12px;
        transition: all 0.3s ease;
    }

    .btn-details {
        background: #e3f2fd;
        color: #1976d2;
    }

        .btn-details:hover {
            background: #bbdefb;
            color: #1565c0;
        }

    .btn-edit {
        background: #fff3e0;
        color: #f57c00;
    }

        .btn-edit:hover {
            background: #ffe0b2;
            color: #ef6c00;
        }

    .btn-payment {
        background: #e8f5e8;
        color: #28a745;
    }

        .btn-payment:hover {
            background: #c3e6cb;
            color: #1e7e34;
        }

    .no-data {
        text-align: center;
        padding: 40px;
        color: #6c757d;
    }

