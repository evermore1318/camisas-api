@model IEnumerable<DSW_PROYECTO_PALACIO_CAMISAS_WebApp.Models.Pedido>
@{
    ViewData["Title"] = "Gestión de Pedidos";
    ViewData["Subtitle"] = "Administración de pedidos y pagos del sistema";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="content-wrapper">
    <!-- Header simple -->
    <div class="page-header">
        <h3>Lista de Pedidos</h3>
        <a href="@Url.Action("Create", "Pedidos")" class="btn-create">
            <i class="fas fa-plus"></i>
            Nuevo Pedido
        </a>
    </div>

    <!-- Filtros -->
    <div class="filters-container">
        <form method="get" class="filters-form">
            <div class="filters-grid">
                <div class="filter-item">
                    <label class="filter-label">Proveedor:</label>
                    <select name="proveedor" class="filter-select" asp-items="@ViewBag.proveedores">
                        <option value="">Todos los proveedores</option>
                    </select>
                </div>
                <div class="filter-item">
                    <label class="filter-label">Año:</label>
                    <select name="anio" class="filter-select" asp-items="@ViewBag.años">
                        <option value="">Todos los años</option>
                    </select>
                </div>
                <div class="filter-item">
                    <label class="filter-label">Mes:</label>
                    <select name="mes" class="filter-select" asp-items="ViewBag.meses">
                        <option value="">Todos los meses</option>
                    </select>
                </div>
                <div class="filter-item filter-actions">
                    <button type="submit" class="btn-filter">
                        <i class="fas fa-search"></i>
                        Consultar
                    </button>
                </div>
            </div>
        </form>
    </div>

    <!-- Tabla de pedidos -->
    <div class="table-container">
        <table class="pedidos-table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Descripción</th>
                    <th>Proveedor</th>
                    <th>Fecha</th>
                    <th>Monto (S/.)</th>
                    <th>Estado</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <span class="pedido-id">#@item.IdPedido.ToString().PadLeft(4, '0')</span>
                        </td>
                        <td>
                            <div class="descripcion-cell">
                                <span class="descripcion-text">@item.Descripcion</span>
                            </div>
                        </td>
                        <td>
                            <div class="proveedor-cell">
                                <div class="proveedor-avatar">@item.Proveedor.Nombre.Substring(0, 1).ToUpper()</div>
                                <span class="proveedor-name">@item.Proveedor.Nombre</span>
                            </div>
                        </td>
                        <td>
                            <span class="fecha-text">@item.Fecha.ToString("dd/MM/yyyy")</span>
                        </td>
                        <td>
                            <span class="monto-text">S/. @item.Monto.ToString("N2")</span>
                        </td>
                        <td>
                            @{
                                string estadoClass = "";
                                string estadoIcon = "";
                                switch (item.Estado?.ToLower())
                                {
                                    case "pendiente":
                                        estadoClass = "badge-pending";
                                        estadoIcon = "fas fa-clock";
                                        break;
                                    case "pagado":
                                        estadoClass = "badge-paid";
                                        estadoIcon = "fas fa-check-circle";
                                        break;
                                    case "cancelado":
                                        estadoClass = "badge-cancelled";
                                        estadoIcon = "fas fa-times-circle";
                                        break;
                                    default:
                                        estadoClass = "badge-default";
                                        estadoIcon = "fas fa-question-circle";
                                        break;
                                }
                            }
                            <span class="badge @estadoClass">
                                <i class="@estadoIcon"></i> @item.Estado
                            </span>
                        </td>
                        <td>
                            <div class="actions-cell">
                                <a href="@Url.Action("Details", new { id = item.IdPedido })" class="btn-action btn-details" title="Ver detalles">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a href="@Url.Action("Edit", new { id = item.IdPedido })" class="btn-action btn-edit" title="Editar">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a href="@Url.Action("RegistrarPago", "Pagos", new { idPedido = item.IdPedido })" class="btn-action btn-payment" title="Registrar Pago">
                                    <i class="fas fa-credit-card"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        @if (!Model.Any())
        {
            <div class="no-data">
                <i class="fas fa-shopping-cart"></i>
                <p>No hay pedidos registrados con los filtros seleccionados</p>
            </div>
        }
    </div>

    <!-- Paginación -->
    @if (ViewBag.totalPaginas > 1)
    {
        <div class="pagination-container">
            <nav class="pagination-nav">
                <ul class="pagination-list">
                    @for (int i = 1; i <= ViewBag.totalPaginas; i++)
                    {
                        <li class="pagination-item @(i == ViewBag.paginaActual ? "active" : "")">
                            <a class="pagination-link"
                               asp-action="Index"
                               asp-route-page="@i"
                               asp-route-numreg="@ViewBag.numreg"
                               asp-route-proveedor="@ViewBag.proveedorSeleccionado"
                               asp-route-anio="@ViewBag.anioSeleccionado"
                               asp-route-mes="@ViewBag.mesSeleccionado">
                                @i
                            </a>
                        </li>
                    }
                </ul>
            </nav>
        </div>
    }
</div>

<style>
