@model DSW_PROYECTO_PALACIO_CAMISAS_WebApp.Models.Pago
@{
    ViewData["Title"] = "Registrar Pago";
    ViewData["Subtitle"] = "Procesar pago de pedido";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="content-wrapper">
    <!-- Header -->
    <div class="page-header">
        <h3>Registrar Pago</h3>
        <a asp-action="Index" asp-controller="Pedidos" class="btn-back">
            <i class="fas fa-arrow-left"></i>
            Volver a Pedidos
        </a>
    </div>

    <!-- Contenedor principal -->
    <div class="form-container">
        <div class="form-header">
            <div class="form-icon">
                <i class="fas fa-credit-card"></i>
            </div>
            <div class="form-title">
                <h4>Información del Pago</h4>
                <p>Complete los datos para registrar el pago del pedido</p>
            </div>
        </div>

        <form asp-action="RegistrarPago" class="pago-form">
            <div asp-validation-summary="ModelOnly" class="validation-summary"></div>

            <!-- Información del pedido -->
            <div class="form-section">
                <h5 class="section-title">
                    <i class="fas fa-box"></i>
                    Pedido Asociado
                </h5>
                <div class="form-group">
                    <label class="form-label">Pedido</label>
                    <input type="text" class="form-control readonly-input" value="@ViewBag.DescripcionPedido" readonly />
                    <input asp-for="IdPedido" type="hidden" />
                </div>
            </div>

            <!-- Datos del pago -->
            <div class="form-section">
                <h5 class="section-title">
                    <i class="fas fa-money-bill-wave"></i>
                    Detalles del Pago
                </h5>

                <div class="form-group">
                    <label asp-for="Descripcion" class="form-label">Descripción</label>
                    <input asp-for="Descripcion" class="form-control" placeholder="Ingrese una descripción del pago" />
                    <span asp-validation-for="Descripcion" class="field-validation-error"></span>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label asp-for="Fecha" class="form-label">Fecha</label>
                        <input asp-for="Fecha" class="form-control" type="date" />
                        <span asp-validation-for="Fecha" class="field-validation-error"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Monto" class="form-label">Monto (S/.)</label>
                        <div class="input-group">
                            <div class="input-prefix">S/.</div>
                            <input asp-for="Monto" class="form-control" type="number" step="0.01" min="0" placeholder="0.00" />
                        </div>
                        <span asp-validation-for="Monto" class="field-validation-error"></span>
                    </div>
                </div>
            </div>

            <!-- Botones de acción -->
            <div class="form-actions">
                <button type="submit" class="btn-primary">
                    <i class="fas fa-save"></i>
                    Registrar Pago
                </button>
                <a asp-action="Index" asp-controller="Pedidos" class="btn-cancel">
                    <i class="fas fa-times"></i>
                    Cancelar
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

