@{
    ViewData["Title"] = "Dashboard";
    ViewData["Subtitle"] = "Panel de control principal";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<!-- Solo el contenido específico del Dashboard -->
<div class="dashboard-grid">
    <!-- Card Camisas -->
    <div class="dashboard-card" onclick="location.href='@Url.Action("Index", "Camisas")'">
        <div class="card-icon maintenance">
            <i class="fas fa-tshirt"></i>
        </div>
        <div class="card-content">
            <h3>Camisas</h3>
            <p>Total de productos disponibles</p>
            <div class="card-stats">
                <span class="stat-number">@ViewBag.TotalCamisas</span>
                <span class="stat-label">Camisas registradas</span>
            </div>
        </div>
    </div>

    <!-- Card Ventas -->
    <div class="dashboard-card" onclick="location.href='@Url.Action("Index", "Ventas")'">
        <div class="card-icon sales">
            <i class="fas fa-shopping-cart"></i>
        </div>
        <div class="card-content">
            <h3>Ventas</h3>
            <p>Control de ventas y facturación</p>
            <div class="card-stats">
                <span class="stat-number">@ViewBag.TotalVentas</span>
                <span class="stat-label">Ventas registradas</span>
            </div>
        </div>
    </div>

    <!-- Card Usuarios -->
    <div class="dashboard-card" onclick="location.href='@Url.Action("Index", "Usuarios")'">
        <div class="card-icon users">
            <i class="fas fa-users"></i>
        </div>
        <div class="card-content">
            <h3>Usuarios</h3>
            <p>Administración de usuarios</p>
            <div class="card-stats">
                <span class="stat-number">@ViewBag.TotalUsuarios</span>
                <span class="stat-label">Usuarios activos</span>
            </div>
        </div>
    </div>
</div>

<!-- Stats Row -->
<div class="stats-row">
    <div class="stat-card">
        <div class="stat-icon">
            <i class="fas fa-chart-line"></i>
        </div>
        <div class="stat-content">
            <div class="stat-number">@ViewBag.TotalVentas</div>
            <div class="stat-label">Ventas Totales</div>
        </div>
    </div>

    <div class="stat-card">
        <div class="stat-icon">
            <i class="fas fa-users"></i>
        </div>
        <div class="stat-content">
            <div class="stat-number">@ViewBag.TotalUsuarios</div>
            <div class="stat-label">Usuarios Registrados</div>
        </div>
    </div>

    <div class="stat-card">
        <div class="stat-icon">
            <i class="fas fa-box"></i>
        </div>
        <div class="stat-content">
            <div class="stat-number">@ViewBag.TotalCamisas</div>
            <div class="stat-label">Productos</div>
        </div>
    </div>

    <div class="stat-card">
        <div class="stat-icon">
            <i class="fas fa-clock"></i>
        </div>
        <div class="stat-content">
            <div class="stat-number" id="currentTime">00:00:00</div>
            <div class="stat-label">Hora Actual</div>
            <div class="stat-change">Sistema activo</div>
        </div>
    </div>
</div>