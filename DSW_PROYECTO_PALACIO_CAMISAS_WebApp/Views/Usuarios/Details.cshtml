@model DSW_PROYECTO_PALACIO_CAMISAS_WebApp.Models.Usuario
@{
    ViewData["Title"] = "Detalles Usuario";
    ViewData["Subtitle"] = "Información completa del usuario";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="content-wrapper">
    <div class="page-header">
        <h3>Detalles del Usuario</h3>
        <a href="@Url.Action("Index")" class="btn-back">
            <i class="fas fa-arrow-left"></i>
            Volver al Listado
        </a>
    </div>

    <div class="details-container">
        <div class="user-header">
            <div class="user-avatar">@Model.Nombre.Substring(0, 1).ToUpper()</div>
            <div class="user-info">
                <h4>@Model.Nombre</h4>
                <p>@Model.RolDescripcion</p>
                @if (Model.Estado == "Activo")
                {
                    <span class="badge badge-active">
                        <i class="fas fa-check-circle"></i> Activo
                    </span>
                }
                else
                {
                    <span class="badge badge-inactive">
                        <i class="fas fa-times-circle"></i> Inactivo
                    </span>
                }
            </div>
        </div>

        <div class="details-grid">
            <div class="detail-item">
                <label>ID Usuario</label>
                <span class="detail-value">#@Model.IdUsuario.ToString().PadLeft(3, '0')</span>
            </div>

            <div class="detail-item">
                <label>Nombre Completo</label>
                <span class="detail-value">@Model.Nombre</span>
            </div>

            <div class="detail-item">
                <label>ID Rol</label>
                <span class="detail-value">@Model.IdRol</span>
            </div>

            <div class="detail-item">
                <label>Descripción del Rol</label>
                <span class="detail-value">@Model.RolDescripcion</span>
            </div>

            <div class="detail-item">
                <label>Estado</label>
                <span class="detail-value">
                    @if (Model.Estado == "Activo")
                    {
                        <span class="status-text status-active">
                            <i class="fas fa-check-circle"></i> @Model.Estado
                        </span>
                    }
                    else
                    {
                        <span class="status-text status-inactive">
                            <i class="fas fa-times-circle"></i> @Model.Estado
                        </span>
                    }
                </span>
            </div>

            <div class="detail-item">
                <label>Contraseña</label>
                <span class="detail-value password-hidden">
                    <i class="fas fa-lock"></i> Oculta por seguridad
                </span>
            </div>
        </div>

        <div class="actions-section">
            <a href="@Url.Action("Edit", new { id = Model.IdUsuario })" class="btn-primary">
                <i class="fas fa-edit"></i>
                Editar Usuario
            </a>
            <a href="@Url.Action("Index")" class="btn-secondary">
                <i class="fas fa-list"></i>
                Ver Todos los Usuarios
            </a>
        </div>
    </div>
</div>

