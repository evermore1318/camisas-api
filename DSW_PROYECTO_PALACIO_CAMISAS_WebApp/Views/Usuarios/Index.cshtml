@model IEnumerable<DSW_PROYECTO_PALACIO_CAMISAS_WebApp.Models.Usuario>
@{
    ViewData["Title"] = "Gestión de Usuarios";
    ViewData["Subtitle"] = "Administración de usuarios y permisos del sistema";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="content-wrapper">
    <!-- Header simple -->
    <div class="page-header">
        <h3>Lista de Usuarios</h3>
        <a href="@Url.Action("Create", "Usuarios")" class="btn-create">
            <i class="fas fa-plus"></i>
            Nuevo Usuario
        </a>
    </div>

    <!-- Tabla de usuarios -->
    <div class="table-container">
        <table class="usuarios-table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Estado</th>
                    <th>Rol</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <span class="user-id">#@item.IdUsuario.ToString().PadLeft(3, '0')</span>
                        </td>
                        <td>
                            <div class="user-name-cell">
                                <div class="user-avatar">@item.Nombre.Substring(0, 1).ToUpper()</div>
                                <span class="user-name">@item.Nombre</span>
                            </div>
                        </td>
                        <td>
                            @if (item.Estado == "Activo")
                            {
                                <span class="badge badge-active">
                                    <i class="fas fa-check-circle"></i> Activo
                                </span>
                            }
                            else
                            {
                                <span class="badge badge-inactive">
                                    <i class="fas fa-times-circle"></i> Inactivo
                                </span>
                            }
                        </td>
                        <td>
                            <span class="role-text">@item.RolDescripcion</span>
                        </td>
                        <td>
                            <div class="actions-cell">
                                <a href="@Url.Action("Details", new { id = item.IdUsuario })" class="btn-action btn-details">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a href="@Url.Action("Edit", new { id = item.IdUsuario })" class="btn-action btn-edit">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a href="@Url.Action("Delete", new { id = item.IdUsuario })" class="btn-action btn-delete">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        @if (!Model.Any())
        {
            <div class="no-data">
                <i class="fas fa-users"></i>
                <p>No hay usuarios registrados</p>
            </div>
        }
    </div>
</div>

<style>
    .content-wrapper {
        max-width: 100%;
    }

    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 25px;
        padding: 20px 0;
        border-bottom: 1px solid #ecf0f1;
    }

        .page-header h3 {
            margin: 0;
            color: #2c3e50;
            font-size: 24px;
        }

