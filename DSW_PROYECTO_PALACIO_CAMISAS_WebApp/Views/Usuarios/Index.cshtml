        }

    .btn-edit {
        background: #fff3e0;
        color: #f57c00;
    }

        .btn-edit:hover {
            background: #ffe0b2;
            color: #ef6c00;
        }

    .btn-delete {
        background: #ffebee;
        color: #d32f2f;
    }

        .btn-delete:hover {
            background: #ffcdd2;
            color: #c62828;
        }

    .no-data {
        text-align: center;
        padding: 40px;
        color: #6c757d;
    }

        .no-data i {
            font-size: 48px;
            margin-bottom: 15px;
            opacity: 0.5;
        }

        .no-data p {
            margin: 0;
            font-size: 16px;
        }

</style>