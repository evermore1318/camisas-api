@model DSW_PROYECTO_PALACIO_CAMISAS_WebApp.Models.Usuario
@{
    ViewData["Title"] = "Eliminar Usuario";
    ViewData["Subtitle"] = "Confirmar eliminación de usuario";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="content-wrapper">
    <!-- Header simple -->
    <div class="page-header">
        <h3>Eliminar Usuario</h3>
        <a href="@Url.Action("Index", "Usuarios")" class="btn-back">
            <i class="fas fa-arrow-left"></i>
            Volver
        </a>
    </div>

    <!-- Contenedor principal -->
    <div class="delete-container">
        <!-- Alerta de confirmación -->
        <div class="warning-alert">
            <i class="fas fa-exclamation-triangle"></i>
            <div class="alert-content">
                <h4>¿Está seguro que desea eliminar este usuario?</h4>
                <p>Esta acción no se puede deshacer. El usuario será eliminado permanentemente del sistema.</p>
            </div>
        </div>

        <!-- Información del usuario -->
        <div class="user-info-card">
            <div class="user-header">
                <div class="user-avatar-large">@Model.Nombre.Substring(0, 1).ToUpper()</div>
                <div class="user-details">
                    <h4>@Model.Nombre</h4>
                    <span class="user-id">#@Model.IdUsuario.ToString().PadLeft(3, '0')</span>
                </div>
            </div>

            <div class="info-grid">
                <div class="info-item">
                    <label>Estado</label>
                    <div class="value">
                        @if (Model.Estado == "Activo")
                        {
                            <span class="badge badge-active">
                                <i class="fas fa-check-circle"></i> Activo
                            </span>
                        }
                        else
                        {
                            <span class="badge badge-inactive">
                                <i class="fas fa-times-circle"></i> Inactivo
                            </span>
                        }
                    </div>
                </div>

                <div class="info-item">
                    <label>Rol</label>
                    <div class="value">@Model.RolDescripcion</div>
                </div>

                <div class="info-item">
                    <label>ID de Rol</label>
                    <div class="value">@Model.IdRol</div>
                </div>
            </div>
        </div>

        <!-- Botones de acción -->
        <div class="actions-container">
            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="IdUsuario" />
                <button type="submit" class="btn-delete-confirm">
                    <i class="fas fa-trash"></i>
                    Confirmar Eliminación
                </button>
                <a href="@Url.Action("Index")" class="btn-cancel">
                    <i class="fas fa-times"></i>
                    Cancelar
                </a>
            </form>
        </div>
    </div>
</div>

