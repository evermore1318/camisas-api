@model IEnumerable<DSW_PROYECTO_PALACIO_CAMISAS_WebApp.Models.Venta>

@{
    ViewData["Title"] = "Ventas con Detalles";
}

<h2 class="mb-3">Listado de Ventas con Detalles</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Registrar Nueva Venta</a>
</p>

@foreach (var venta in Model)
{
    <div class="card mb-4 shadow-sm">
        <div class="card-header bg-dark text-white">
            <div class="d-flex justify-content-between">
                <span>
                    <strong>Venta N°:</strong> @venta.id_venta  |
                    <strong>Cliente:</strong> @venta.nombre_cliente  |
                    <strong>Fecha:</strong> @venta.fecha.ToString("dd/MM/yyyy")
                </span>
                <span>
                    <strong>Total: </strong> S/. @venta.precio_total.ToString("0.00")
                </span>
            </div>
        </div>
        <div class="card-body p-0">
            <table class="table table-bordered m-0">
                <thead class="table-light">
                    <tr>
                        <th>Camisa</th>
                        <th>Presentación (Color/Talla/Manga)</th>
                        <th class="text-end">Cantidad</th>
                        <th class="text-end">Precio Unitario</th>
                        <th class="text-end">Subtotal</th>
                    </tr>
                </thead>
                <tbody>
                    @if (venta.DetallesTotal != null && venta.DetallesTotal.Any())
                    {
                        foreach (var det in venta.DetallesTotal)
                        {
                            <tr>
                                <td>@det.Descripcion</td>
                                <td>@det.Presentacion</td>
                                <td class="text-end">@det.Cantidad</td>
                                <td class="text-end">S/. @det.PrecioUnitario.ToString("0.00")</td>
                                <td class="text-end">S/. @det.Subtotal.ToString("0.00")</td>
                            </tr>
                        }
                    }
                    else if (venta.detalles != null && venta.detalles.Any())
                    {
                        foreach (var det in venta.detalles)
                        {
                            <tr>
                                <td>Camisa #@det.Id_Camisa</td>
                                <td>-</td>
                                <td class="text-end">@det.Cantidad</td>
                                <td class="text-end">S/. @det.Precio.ToString("0.00")</td>
                                <td class="text-end">S/. @(det.Cantidad * det.Precio)</td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
        <div class="card-footer text-end">
            <a asp-action="Edit" asp-route-id="@venta.id_venta" class="btn btn-warning btn-sm">Editar</a>
        </div>
    </div>
}
