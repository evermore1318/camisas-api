        }

        .boleta-table tr:hover {
            background: #f8f9fa;
        }

    .text-end {
        text-align: right;
    }

    .boleta-footer {
        display: flex;
        justify-content: flex-end;
        padding: 10px 12px;
        background: #fafbfc;
