        font-size: 14px;
        margin-top: 6px;
    }

    .boleta-header-right .boleta-total {
        text-align: right;
    }

    .boleta-total span {
        display: block;
        font-size: 12px;
        color: #6c757d;
    }

    .boleta-total h4 {
        margin: 0;
        font-size: 20px;
        color: #2c3e50;
    }

    .boleta-body {
        padding: 0;
    }

    .boleta-table {
        width: 100%;
        border-collapse: collapse;
    }

        .boleta-table thead th {
            background: #f8f9fa;
            padding: 12px 14px;
            text-align: left;
            font-weight: 600;
            color: #2c3e50;
            border-bottom: 2px solid #ecf0f1;
            font-size: 14px;
        }

        .boleta-table td {
            padding: 12px 14px;
            border-bottom: 1px solid #ecf0f1;
