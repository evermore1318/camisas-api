@model IEnumerable<DSW_PROYECTO_PALACIO_CAMISAS_WebApp.Models.Venta>

@{
    ViewData["Title"] = "Gestión de Ventas";
    ViewData["Subtitle"] = "Listado de boletas y detalles";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="content-wrapper">

    <!-- Header con acción y filtros -->
    <div class="page-header">
        <h3>Lista de Ventas</h3>

        <div class="page-header-actions">
            <form method="get" class="filters-inline" asp-action="Index" asp-controller="Ventas">
                <div class="input-group">
                    <label for="dni" class="sr-only">DNI</label>
                    <input id="dni" name="dni" value="@((string)ViewBag.f_dni ?? "")"
                           class="filter-input" placeholder="Buscar por DNI" />

                    <label for="id" class="sr-only">N° Venta</label>
                    <input id="id" name="id" value="@((int?)ViewBag.f_id ?? null)"
                           class="filter-input" placeholder="Buscar por N° Venta" />

                    <button type="submit" class="btn-filter">
                        <i class="fas fa-search"></i> Consultar
                    </button>
                </div>
            </form>

            <a href="@Url.Action("Create","Ventas")" class="btn-create">
                <i class="fas fa-plus"></i>
                Registrar Nueva Venta
            </a>
        </div>
    </div>

    <!-- Lista de boletas -->
    <div class="boletas-container">
        @if (Model != null && Model.Any())
        {
            foreach (var venta in Model)
            {
                <div class="boleta-card">
                    <div class="boleta-header">
                        <div class="boleta-header-left">
                            <div class="boleta-titulo">
                                <span class="badge badge-boleta">BOLETA</span>
                                <strong class="boleta-num">N° @venta.id_venta.ToString().PadLeft(4, '0')</strong>
                            </div>

                            @{
                                string estado = venta.estado?.Trim().ToLower() ?? "";
                                string estadoClass = estado switch
                                {
                                    "activo" => "badge-paid",
                                    "anulado" => "badge-cancelled",
                                    "pendiente" => "badge-pending",
                                    _ => "badge-default" 
                                };
                            }

                            <div class="boleta-meta">
                                <span><strong>Cliente:</strong> @venta.nombre_cliente</span>
                                @if (!string.IsNullOrWhiteSpace(venta.dni_cliente))
                                {
                                    <span><strong>DNI:</strong> @venta.dni_cliente</span>
                                }
                                <span><strong>Fecha:</strong> @venta.fecha.ToString("dd/MM/yyyy")</span>
                                <span class="badge @estadoClass" title="Estado de la venta" style="margin-left:6px;">
                                    @venta.estado
                                </span>
                            </div>
                        </div>
                        <div class="boleta-header-right">
                            <div class="boleta-total">
                                <span>Total</span>
                                <h4>S/. @venta.precio_total.ToString("N2")</h4>
                            </div>
                        </div>
                    </div>

                    <div class="boleta-body">
                        <table class="boleta-table">
                            <thead>
                                <tr>
                                    <th style="width: 32%;">Camisa</th>
                                    <th style="width: 28%;">Presentación (Color/Talla/Manga)</th>
                                    <th class="text-end" style="width: 10%;">Cant.</th>
                                    <th class="text-end" style="width: 15%;">P. Unit.</th>
                                    <th class="text-end" style="width: 15%;">Subtotal</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (venta.DetallesTotal != null && venta.DetallesTotal.Any())
                                {
                                    foreach (var det in venta.DetallesTotal)
                                    {
                                        <tr>
                                            <td>@det.Descripcion</td>
                                            <td>@det.Presentacion</td>
                                            <td class="text-end">@det.Cantidad</td>
                                            <td class="text-end">S/. @det.PrecioUnitario.ToString("N2")</td>
                                            <td class="text-end">S/. @det.Subtotal.ToString("N2")</td>
                                        </tr>
                                    }
                                }
                                else if (venta.detalles != null && venta.detalles.Any())
                                {
                                    foreach (var det in venta.detalles)
                                    {
                                        var subtotal = det.Cantidad * det.Precio;
                                        <tr>
                                            <td>Camisa #@det.Id_Camisa</td>
                                            <td>-</td>
                                            <td class="text-end">@det.Cantidad</td>
                                            <td class="text-end">S/. @det.Precio.ToString("N2")</td>
                                            <td class="text-end">S/. @subtotal.ToString("N2")</td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="5" class="no-rows">Sin detalles para esta venta.</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <div class="boleta-footer">
                        <div class="boleta-acciones">
                            <a href="@Url.Action("Edit", new { id = venta.id_venta })" class="btn-action btn-edit" title="Editar estado">
                                <i class="fas fa-edit"></i>
                            </a>
                            <a href="@Url.Action("Imprimir", new { id = venta.id_venta })" class="btn-action btn-print" title="Imprimir boleta">
                                <i class="fas fa-print"></i>
                            </a>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="no-data">
                <i class="fas fa-receipt"></i>
                <p>No hay ventas registradas con los filtros seleccionados</p>
            </div>
        }
    </div>
</div>

<style>
