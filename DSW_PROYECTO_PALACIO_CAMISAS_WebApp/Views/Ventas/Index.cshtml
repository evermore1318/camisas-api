        border-bottom: 1px dashed #d1d5db;
        background: linear-gradient(180deg,#f8fafc,#fff);
    }

    .boleta-titulo {
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .badge-boleta {
        background: #e3f2fd;
        color: #1976d2;
        padding: 4px 8px;
        border-radius: 12px;
        font-size: 11px;
        font-weight: 700;
    }

    .boleta-num {
        color: #2c3e50;
        font-size: 16px;
        letter-spacing: .3px;
    }

    .boleta-meta {
        display: flex;
        flex-wrap: wrap;
