@model IEnumerable<DSW_PROYECTO_PALACIO_CAMISAS_WebApp.Models.Camisa>

<table class="table table-sm table-hover">
    <thead>
        <tr>
            <th>ID</th>
            <th>Marca</th>
            <th>Descripción</th>
            <th>Color</th>
            <th>Manga</th>
            <th>Talla</th>
            <th class="text-end">Precio</th>
            <th class="text-end">Stock</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <td>@c.id_camisa</td>
                <td>@c.marca_nombre</td>
                <td>@c.descripcion</td>
                <td>@c.color</td>
                <td>@c.manga</td>
                <td>@c.talla</td>
                <td class="text-end">@c.precio_venta.ToString("0.00")</td>
                <td class="text-end">@c.stock</td>
                <td class="text-end">
                    <button type="button" class="btn btn-sm btn-outline-primary"
                            data-select-camisa data-id="@c.id_camisa">
                        Seleccionar
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>
