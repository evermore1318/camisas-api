@model DSW_PROYECTO_PALACIO_CAMISAS_WebApp.Models.Venta
@{
    ViewData["Title"] = "Detalle de Venta";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>@ViewData["Title"] N° @Model.id_venta</h2>
    <div>
        <a asp-action="Index" class="btn btn-secondary">Volver al Listado</a>
        @if (Model.estado != "Anulado")
        {
            <a asp-action="Comprobante" asp-route-id="@Model.id_venta" class="btn btn-info">Ver Comprobante</a>
        }
    </div>
</div>

@if (TempData["msg"] != null)
{
    <div class="alert alert-@(TempData["tipo"] == "success" ? "success" : "danger") alert-dismissible fade show">
        @TempData["msg"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<!-- Información de la Venta -->
<div class="card mb-4">
    <div class="card-header bg-primary text-white">
        <h5 class="mb-0">
            <i class="fas fa-receipt me-2"></i>Información General
            <span class="badge bg-@(Model.estado == "Activo" ? "success" : Model.estado == "Anulado" ? "danger" : "secondary") ms-2">
                @Model.estado
            </span>
        </h5>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-3">
                <strong>N° Venta:</strong><br>
                <span class="h5 text-primary">@Model.id_venta</span>
            </div>
            <div class="col-md-3">
                <strong>Fecha:</strong><br>
                @Model.fecha.ToString("dd/MM/yyyy HH:mm")
            </div>
            <div class="col-md-3">
                <strong>Cliente:</strong><br>
                @Model.nombre_cliente
            </div>
            <div class="col-md-3">
                <strong>DNI:</strong><br>
                @Model.dni_cliente
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-md-3">
                <strong>Tipo Pago:</strong><br>
                <span class="badge bg-info">@Model.tipo_pago</span>
            </div>
            <div class="col-md-3">
                <strong>Total:</strong><br>
                <span class="h4 text-success">S/. @Model.precio_total.ToString("N2")</span>
            </div>
            <div class="col-md-6">
                @if (Model.estado == "Activo")
                {
                    <div class="text-end">
                        <button class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#anularModal">
                            <i class="fas fa-ban me-1"></i>Anular Venta
                        </button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Detalle de Productos -->
<div class="card">
    <div class="card-header bg-secondary text-white">
        <h5 class="mb-0">
            <i class="fas fa-list me-2"></i>Detalle de Productos
            <span class="badge bg-light text-dark ms-2">@Model.detalles?.Count items</span>
        </h5>
    </div>
    <div class="card-body p-0">
        @if (Model.detalles?.Any() == true)
        {
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th width="5%">#</th>
                            <th width="25%">Descripción</th>
                            <th width="15%">Marca</th>
                            <th width="10%">Color</th>
                            <th width="8%">Talla</th>
                            <th width="8%">Manga</th>
                            <th width="8%" class="text-center">Cantidad</th>
                            <th width="10%" class="text-end">Precio Unit.</th>
                            <th width="11%" class="text-end">Subtotal</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int contador = 1;
                        }
                        @foreach (var detalle in Model.detalles)
                        {
                            <tr class="@(detalle.estado == "Anulado" ? "table-secondary text-muted" : "")">
                                <td>@contador</td>
                                <td>
                                    <strong>@(detalle.camisa_descripcion ?? "N/A")</strong>
                                    @if (detalle.estado == "Anulado")
                                    {
                                        <br>

                                        <small class="text-muted"><i>Anulado</i></small>
                                    }
                                </td>
                                <td>@(detalle.marca_nombre ?? "N/A")</td>
                                <td>
                                    <span class="badge" style="background-color: @GetColorBadge(detalle.camisa_color); color: @GetTextColor(detalle.camisa_color);">
                                        @(detalle.camisa_color ?? "N/A")
                                    </span>
                                </td>
                                <td class="text-center">
                                    <span class="badge bg-outline-secondary">@(detalle.camisa_talla ?? "N/A")</span>
                                </td>
                                <td>@(detalle.camisa_manga ?? "N/A")</td>
                                <td class="text-center">
                                    <span class="badge bg-primary">@detalle.cantidad</span>
                                </td>
                                <td class="text-end">S/. @detalle.precio.ToString("N2")</td>
                                <td class="text-end">
                                    <strong>S/. @((detalle.cantidad * detalle.precio).ToString("N2"))</strong>
                                </td>
                            </tr>
                            contador++;
                        }
                    </tbody>
                    <tfoot class="table-light">
                        <tr>
                            <th colspan="8" class="text-end">
                                <h5 class="mb-0">TOTAL VENTA:</h5>
                            </th>
                            <th class="text-end">
                                <h4 class="mb-0 text-success">S/. @Model.precio_total.ToString("N2")</h4>
                            </th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-box-open fa-3x text-muted mb-3"></i>
                <h5 class="text-muted">No hay productos en esta venta</h5>
            </div>
        }
    </div>
</div>

<!-- Modal de Confirmación para Anular -->
<div class="modal fade" id="anularModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title">
                    <i class="fas fa-exclamation-triangle me-2"></i>Confirmar Anulación
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="text-center">
                    <i class="fas fa-ban fa-3x text-danger mb-3"></i>
                    <h5>¿Está seguro que desea anular esta venta?</h5>
                    <p class="text-muted">
                        Esta acción cambiará el estado de la venta a "Anulado" y no se podrá revertir.
                    </p>
                    <div class="alert alert-warning">
                        <strong>Venta N°:</strong> @Model.id_venta<br>
                        <strong>Cliente:</strong> @Model.nombre_cliente<br>
                        <strong>Total:</strong> S/. @Model.precio_total.ToString("N2")
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times me-1"></i>Cancelar
                </button>
                <form asp-action="Anular" asp-route-id="@Model.id_venta" method="post" class="d-inline">
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-ban me-1"></i>Sí, Anular Venta
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@functions {
    string GetColorBadge(string color)
    {
        return color?.ToLower() switch
        {
            "rojo" or "red" => "#dc3545",
            "azul" or "blue" => "#0d6efd",
            "verde" or "green" => "#198754",
            "amarillo" or "yellow" => "#ffc107",
            "negro" or "black" => "#212529",
            "blanco" or "white" => "#f8f9fa",
            "gris" or "gray" => "#6c757d",
            _ => "#6c757d"
        };
    }

    string GetTextColor(string color)
    {
        return color?.ToLower() switch
        {
            "amarillo" or "yellow" or "blanco" or "white" => "#000",
            _ => "#fff"
        };
    }
}