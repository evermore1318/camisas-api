@model IEnumerable<DSW_PROYECTO_PALACIO_CAMISAS_WebApp.Models.DTOs.ReporteDiarioDto>
@{
    ViewData["Title"] = "Reporte Diario";
    ViewData["Subtitle"] = "Análisis de ventas por fecha";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="content-wrapper">
    <!-- Header -->
    <div class="page-header">
        <h3>Reporte Diario</h3>
        <div class="header-actions">
            <a asp-controller="Reportes" asp-action="ExportarPdf" asp-route-fecha="@ViewBag.Fecha" class="btn-export">
                <i class="fas fa-file-pdf"></i>
                Descargar PDF
            </a>
            <a asp-controller="Pedidos" asp-action="Index" class="btn-secondary">
                <i class="fas fa-box"></i>
                Ir a Pedidos
            </a>
        </div>
    </div>

    <!-- Formulario de filtro -->
    <div class="filter-container">
        <form asp-controller="Reportes" asp-action="Index" method="get" class="filter-form">
            <div class="form-group">
                <label for="fecha" class="form-label">Seleccione la fecha</label>
                <input type="date" id="fecha" name="fecha" class="form-control" value="@ViewBag.Fecha" required />
            </div>
            <button type="submit" class="btn-generate">
                <i class="fas fa-chart-line"></i>
                Generar Reporte
            </button>
        </form>
    </div>

    <!-- Tabla de resultados -->
    <div class="table-container">
        @if (Model != null && Model.Any())
        {
            <table class="reporte-table">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Marca</th>
                        <th>Cantidad</th>
                        <th>Precio</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <span class="item-number">#@item.Numero.ToString().PadLeft(3, '0')</span>
                            </td>
                            <td>
                                <div class="marca-cell">
                                    <div class="marca-icon">@item.Marca.Substring(0, 1).ToUpper()</div>
                                    <span class="marca-name">@item.Marca</span>
                                </div>
                            </td>
                            <td>
                                <span class="cantidad-badge">@item.Cantidad</span>
                            </td>
                            <td>
                                <span class="precio-text">@item.Precio.ToString("C")</span>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="no-data">
                <i class="fas fa-chart-line"></i>
                <p>No se encontraron resultados para la fecha seleccionada</p>
                <small>Seleccione otra fecha para generar el reporte</small>
            </div>
        }
    </div>
</div>

<style>
